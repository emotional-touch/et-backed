{{!< main}}
<div class="main_layout">
    {{> admin-sidebar }}
    <div class="content">   
        {{> admin-header }}
        <!-- other content -->
         <div class="role_management_page common_table">
            <div class="add_user">
                <a href="/admin/role-management/add" class="add_user_btn"><i class="fa fa-circle-plus"></i> </i>Add New Role  </a>
            </div>
            <table id="role-management" class="display table cmn_table" style="width:100%">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>Role</th>
                        <th style="width:150px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each roleList}}
                    <tr>
                        <td>{{addOne @index}}</td>
                        <td>{{name}}</td>
                        <td> 
                            {{!-- <a href="#" class="action_btn"><i class=" fa fa-eye"></i></a> --}}
                            <a href="/admin/role-management/edit/{{id}}" class="action_btn"><i class=" fa fa-pen"></i></a>
                            <a href="#" class="action_btn delete-role" data-id="{{id}}"><i class="fa fa-trash-can"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>        
        </div>
    </div>
</div>
{{> footer-script }}
<script>

    $(document).on('click', '.delete-role', function(){
        var roleId = $(this).attr('data-id');
        var alertData = {
            title: 'Delete Role',
            text: 'Are you sure you want to delete this role?', 
            btnText: 'Yes, delete',
            icon: 'warning'
        };
        var url = '/admin/role-management/delete/'+roleId;
        alertBox(alertData, url);
    });
  
</script>