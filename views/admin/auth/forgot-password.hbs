{{!< main}}
<div class="login_page">
    {{> header }}
    <section>
        <div class="main_sec">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="login_img">
                            <img src="/images/login-img.svg" alt="" class="img-fluid">
                        </div>
                    </div>
                      <div class="col-lg-6">

                            <div class="login_detail">
                                <div class="login_form">
                                    <h2 class="cmn_title">Forgot Password?</h2>
                                    <p class="forgot_para">Forgot Password? Please enter your email address. You will receive a link to create a new password via email.</p>
                                    <form action="/admin/forgot-password-post" method="POST"  class="login_form" id="forgot-password-form">
                                        <div class="form-group">
                                            <label for="email">Email Address</label>
                                            <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" placeholder="Enter Email">
                                            <span toggle="#password" class="field-icon toggle-password">
                                                <span class="material-icons"><i class="fa fa-eye"></i></span>
                                            </span>
                                        </div>
                                        <input type="submit" class="login_btn" value="Reset My Password">
                                    </form>
                                </div>
                            </div>
                        </div>
                    
                </div>
            </div>
        </div>
    </section>
</div>
{{> footer-script }}
<script>
    $(document).ready(function() {
        $('#forgot-password-form').validate({
            rules: {
                email: {
                    required: true,
                    email: true
                },
            },
            messages: {
                email: {
                    required: 'Please enter your email.',
                    email: "Please enter valid email address.",
                },
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    });
</script>
