{{!< main}}
<div class="login_page">
    {{> header }}
    <section>
        <div class="main_sec">
            <div class="container">
                <div class="row">
                    <div class="col-md-6">
                        <div class="login_img">
                            <img src="/images/login-img.svg" alt="" class="img-fluid">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="login_detail">
                            {{#if messages.success}}
                                <div class="success-message">{{messages.success}}</div>
                            {{/if}}
                             <div class="login_form">
                                <h2 class="cmn_title">Login as a Admin User</h2>
                            <form action="/admin/login-post" method="POST" class="login_form" id="login-form">
                            
                                <div class="form-group">
                                    <label for="email">Email Address</label>
                                    <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp" placeholder="Enter Email">
                                    <!-- <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> -->
                                </div>
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <input class='validate' type='password' data-sign="*" name='password' id='password' placeholder="Please Enter Your Password"/>
                                    <span toggle="#password" class="field-icon toggle-password">
                                        <span class="material-icons"><i class="fa fa-eye"></i></span>
                                    </span>
                                    </div>
                                    
                                <a href="/admin/forgot-password" class="for_pass">Forgot Password?</a>
                                <input type="submit" class="login_btn" value="login">
                            </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
{{> footer-script }}
<script>
    $(document).ready(function() {
        $('#login-form').validate({
            rules: {
                email: {
                    required: true,
                    email: true
                },
                password: {
                    required: true
                }
            },
            messages: {
                email: {
                    required: 'Please enter your email',
                    email: "Please enter valid email address",
                },
                password: {
                    required: 'Please enter your password'
                }
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    });
</script>
