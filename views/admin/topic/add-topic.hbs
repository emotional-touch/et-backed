{{!< main}}
<div class="main_layout">
    {{> admin-sidebar }}
    <div class="content">   
        {{> admin-header }}
        <!-- other content -->
        <div class="common_table topic_detail_page">
            <div class="user_detail_page">
                <button class="back_btn"><a href="/admin/topic-management/list"><i class="fa fa-arrow-left"></i></a>
                    {{#if topicInfo }} Edit {{else}} Add {{/if}} Topic
                </button>
            </div>

            <div class="addnew_user_form">
                <form action="/admin/topic-management/save" method="POST" class="common_form" id="add-topic-form" enctype='multipart/form-data' >
                    <input type="hidden" name="topicId" {{#if topicInfo }} value="{{topicInfo.id}}" {{/if}}/>
                    <div class="row">
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label for="name">Topic</label>
                                <input name="name" type="text" class="form-control" id="name" aria-describedby="" placeholder="Enter Topic" {{#if topicInfo }} value="{{topicInfo.name}}" {{/if}} >
                            </div>
                        </div>
                        
                        
                    </div>
                    <button type="submit" class="btn custom_btn">Add</button>
                </form>
            </div>  
        </div>
    </div>
</div>
{{> footer-script }} 

<script>
    $(document).ready(function() {
        $('#add-topic-form').validate({
            rules: {
                name: {
                    required: true,
                },
            },
            messages: {
                name: {
                    required: 'Please enter topic.',
                },
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    })

</script>