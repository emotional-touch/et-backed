{{!< main}}
<div class="main_layout">
    {{> admin-sidebar }}
    <div class="content">   
        {{> admin-header }}
        <!-- other content -->
        <div class="common_table">
            <table id="listener-profile-approval-requests" class="display table cmn_table" style="width:100%">
                <thead>
                    <tr>
                        <th>Sr. No</th>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email Address</th>
                        <th>Contact Number</th>
                        <th>Message</th>
                        <th style="width:170px;">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each contactList}}
                    <tr>
                        <td>{{addOne @index}}</td>
                        <td>{{first_name}}</td>
                        <td>{{last_name}}</td>
                        <td>{{email_address}}</td>
                        <td>{{contact_number}}</td>
                        <td>
                            <p class="text-div">
                                <span class="less-text">
                                    {{truncateText message 100}}
                                </span>
                                <span class="full-text" style="display:none;">
                                    {{message}}
                                </span>
                            </p>
                        </td>
                        <td>
                            <a href="#" class="action_btn delete-contact" data-id="{{id}}"><i class="fa fa-trash-can"></i></a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>        
        </div>
    </div>
</div>    
{{> footer-script }}
<script>
   
    $(document).on('click', '.delete-contact', function(){
        var userId = $(this).attr('data-id');
        var alertData = {
            title: 'Delete Contact',
            text: 'Are you sure you want to delete this contact?', 
            btnText: 'Yes, delete',
            icon: 'warning'
        };
        var url = '/admin/contact-request/delete/'+userId;
        alertBox(alertData, url);
    });
    $('.read-more-text').on('click', function(){
        $(this).closest('.less-text').hide();
        $(this).closest('.less-text').next('.full-text').show();
    });
</script>