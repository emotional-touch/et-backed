{{!< main}}
<div class="main_layout">
    {{> admin-sidebar }}
    <div class="content">   
        {{> admin-header }}
        <!-- other content -->
        <div class="common_table setting_detail_page">
            <div class="user_detail_page">
                <button class="back_btn"><a href="/admin/charge-management/list"><i class="fa fa-arrow-left"></i></a>
                    {{#if settingInfo }} Edit {{else}} Add {{/if}} GST
                </button>
            </div>

            <div class="addnew_user_form">
                <form action="/admin/charge-management/gst/save" method="POST" class="common_form" id="add-setting-form" enctype='multipart/form-data' >
                    <input type="hidden" name="settingId" {{#if gstInfo }} value="{{gstInfo.id}}" {{/if}}/>
                    <input type="hidden" name="field" {{#if gstInfo }} value="{{gstInfo.field}}" {{/if}}/>
                    <div class="row">
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label for="value">Add GST Charge</label>
                                <input name="value" type="text" class="form-control" id="value" aria-describedby="" placeholder="Enter GST Charge" {{#if gstInfo }} value="{{gstInfo.value}}" {{/if}} >
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn custom_btn">Add</button>
                </form>
            </div>  
        </div>
    </div>
</div>
{{> footer-script }} 

<script>
    $(document).ready(function() {
        $('#add-setting-form').validate({
            rules: {
                value: {
                    required: true,
                    number: true,
                },
            },
            messages: {
                value: {
                    required: 'Please enter gst charge.',
                },
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    })

</script>