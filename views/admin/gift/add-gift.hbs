{{!< main}}
<div class="main_layout">
    {{> admin-sidebar }}
    <div class="content">   
        {{> admin-header }}
        <!-- other content -->
        <div class="user_mgmnt_page common_table">
            <div class="user_detail_page">
                <button class="back_btn"><a href="/admin/gift-management/list"><i class="fa fa-arrow-left"></i></a>
                    Add Gift Amount
                </button>
            </div>

            <div class="addnew_user_form">
                <form action="/admin/gift-management/save" method="POST" class="common_form" id="add-gift-form">
                    <input type="hidden" name="giftId" {{#if giftInfo }} value="{{giftInfo.id}}" {{/if}}/>
                    <div class="row">
                        <div class="col-sm-6 col-12">
                            <div class="form-group">
                                <label for="name">Gift Amount</label>
                                <input name="gift_amount" type="text" class="form-control" id="gift_amount" aria-describedby="" placeholder="Enter gift amount" {{#if giftInfo }} value="{{giftInfo.gift_amount}}" {{/if}} >
                            </div>
                        </div>
                        
                    </div>
                    <button type="submit" class="btn custom_btn">Add</button>
                </form>
            </div>  
        </div>
    </div>
</div>
{{> footer-script }}
<script>
    $(document).ready(function() {
        $('#add-gift-form').validate({
            rules: {
                gift_amount: {
                    required: true,
                },
            },
            messages: {
                gift_amount: {
                    required: 'Please enter gift amount.',
                },
            },
            errorPlacement: function (error, element) {
                error.insertAfter(element);
            },
            submitHandler: function(form) {
                form.submit();
            }
        });
    });
</script>